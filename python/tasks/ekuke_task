#Additional

print("enter two numbers to add")
first_number = float(input("first_number:"))
second_number = float(input("second_number:"))
sum = first_number + second_number
print(f"{first_number} + {second_number} = {sum:.2f}")
print("")


print("enter two numbers to sub")
first_number = float(input("first_number:"))
second_number = float(input("second_number:"))
sub = first_number - second_number
print(f"{first_number} - {second_number} = {sub:.2f}")
print("")


# Multiplication 
print("enter two numbers to mul")
first_number = float(input("first_number:"))
second_number = float(input("second_number:"))
mul = first_number * second_number
print(f"{first_number} * {second_number} = {mul:.2f}")
print("*")


#Divisions
print("enter two numbers to divide")
first_number = float(input("first_number:"))
second_number = float(input("second_number:"))
div = first_number / second_number
print(f"{first_number} divide by {second_number} = {div:.2f}")
print("")


# Exponentials
print("enter two numbers to perform  exponential")
first_number = float(input("first_number:"))
second_number = float(input("second_number:"))
exp = first_number ** second_number
print(f"{first_number} ** {second_number} = {exp:.2f}")
